{
  "name": "bedstack",
  "title": "Bedstack",
  "description": "Bun + ElysiaJS + Drizzle = the stack you don't want to sleep on",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --ui tui",
    "typecheck": "turbo run typecheck",
    "typegen": "turbo run typegen",
    "docs": "turbo run dev --filter=www",
    "docs:build": "turbo run build --filter=www-legacy",
    "www": "turbo run dev --filter=www",
    "fix": "bun bin/fix.js",
    "fix:unsafe": "bun bin/fix.js --unsafe",
    "check": "biome check && manypkg check",
    "check:errors": "biome check --diagnostic-level=error",
    "clean": "turbo run clean && rimraf dist node_modules",
    "test": "turbo run test",
    "test:api": "turbo run test:api --filter=conduit",
    "test:unit": "turbo run test:unit --filter=conduit",
    "db:migrate": "turbo run db:migrate --filter=conduit",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@manypkg/cli": "0.25.1",
    "all-contributors-cli": "6.26.1",
    "rimraf": "6.1.2",
    "turbo": "2.7.5",
    "typescript": "5.9.3"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "packageManager": "bun@1.3.2",
  "engines": {
    "bun": "^1.3.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "catalog": {
    "typescript": "^5.9.3",
    "bun-types": "^1.3.6",
    "cross-env": "^7.0.3"
  }
}
